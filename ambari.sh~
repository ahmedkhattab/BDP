#!/bin/bash
./cluster/kubectl.sh delete svc consul
./cluster/kubectl.sh delete pod amb-consul
./cluster/kubectl.sh delete svc ambari
./cluster/kubectl.sh delete pod amb-server
./cluster/kubectl.sh delete rc amb-slave-controller

./cluster/kubectl.sh create -f ~/Ambari/consul.json
./cluster/kubectl.sh create -f ~/Ambari/consul-service.json
./cluster/kubectl.sh create -f ~/Ambari/ambari-hdfs.json
./cluster/kubectl.sh create -f ~/Ambari/ambari-service.json
./cluster/kubectl.sh create -f ~/Ambari/ambari-slave.json
