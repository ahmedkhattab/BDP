{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "{{.AmbariSlaveName}}.service.consul",
    "labels": {
      "name": "{{.AmbariSlaveName}}.service.consul"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "{{.AmbariSlaveName}}"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "{{.AmbariSlaveName}}",
          "uses": "amb-server.service.consul"
        }
      },
      "spec": {
        "terminationGracePeriodSeconds": 0,
        "containers": [{
          "name": "{{.AmbariSlaveName}}",
          "image": "khattab/ambari:2.1.2",
          "env": [{
            "name": "BRIDGE_IP",
            "value": "$(CONSUL_SERVICE_HOST)"
          }],
          "ports": [{
            "containerPort": 8010
          }, {
            "containerPort": 8020
          }, {
            "containerPort": 2181
          }, {
            "containerPort": 8019
          }, {
            "containerPort": 50010
          }, {
            "containerPort": 50020
          }, {
            "containerPort": 6188
          }],
          "command": ["/start-agent"]
        }]
      }
    }
  }
}
