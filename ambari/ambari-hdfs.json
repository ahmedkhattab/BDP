{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "amb-server.service.consul",
    "labels": {
      "name": "amb-server.service.consul"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "amb-server",
        "image": "sequenceiq/ambari:2.1.2-v1",
        "ports": [
          {
            "containerPort": 8080
          },
     	 		{
            "containerPort": 8440
          },
     	  	{
            "containerPort": 8441
          },
					{
            "containerPort": 6188
          }
        ],
	"env": [
		{ "name": "BRIDGE_IP",
		  "value": "$(CONSUL_SERVICE_HOST)"
		}
	],
        "resources": {
          "limits": {
            "cpu": "100m"
          }
        }
      }
    ]
  }
}
