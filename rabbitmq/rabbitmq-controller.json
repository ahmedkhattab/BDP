{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "rabbitmq-controller"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "name": "rabbitmq-controller"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "rabbitmq-node",
            "image": "andrewkeig/rabbitmq-mqtt-enabled",
            "ports": [
							{
								"containerPort": 5672			
							},
							{
								"containerPort": 1883			
							},
							{
								"containerPort": 15672			
							}
					
						]
          }
        ]
      }
    }
  }
}
