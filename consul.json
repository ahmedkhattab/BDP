{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "amb-consul",
    "labels": {
      "name": "amb-consul"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "amb-consul",
        "image": "sequenceiq/consul:v0.5.0-v6",
	"args": ["-server", "-bootstrap"],
        "resources": {
          "limits": {
            "cpu": "100m"
          }
        },
			  "ports": [
          {
            "containerPort": 8400
          },
					{
            "containerPort": 8500
          },
					{
            "containerPort": 8600
          },
					{
            "containerPort": 8300
          },
					{
            "containerPort": 8301
          },
					{
            "containerPort": 8302
          }
        ]
     }
    ]
  }
}
