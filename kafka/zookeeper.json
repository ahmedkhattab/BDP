{
  "kind":"PodList",
  "apiVersion":"v1",
  "items":[
    {
      "kind":"Pod",
      "apiVersion":"v1",
      "metadata":{
        "name":"zookeeper-1",
        "labels":{
          "name":"zookeeper",
          "server-id":"1",
          "app":"zk"
        }
      },
      "spec":{
        "terminationGracePeriodSeconds":0,
        "containers":[
          {
            "name":"server",
            "image":"fabric8/zookeeper",
            "env":[
              {
                "name":"SERVER_ID",
                "value":"1"
              },
              {
                "name":"MAX_SERVERS",
                "value":"3"
              }
            ],
            "ports":[
              {
                "containerPort":2181
              },
              {
                "containerPort":2888
              },
              {
                "containerPort":3888
              }
            ]
          }
        ]
      }
    },
