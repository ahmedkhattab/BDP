{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "spark-worker-controller",
    "labels": {
      "name": "spark-worker"
    }
  },
  "spec": {
    "replicas": {{.SparkWorkers}},
    "selector": {
      "name": "spark-worker"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "spark-worker",
          "uses": "spark-master"
        }
      },
      "spec": {
        "terminationGracePeriodSeconds": 0,
        "containers": [
          {
            "name": "spark-worker",
            "image": "gcr.io/google_containers/spark-worker:1.4.0_v1",
            "ports": [
              {
                "containerPort": 8888
              }
            ],
            "resources": {
              "limits": {
                "cpu": "100m"
              }
            }
          }
        ]
      }
    }
  }
}
