{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "amb-server",
    "labels": {
      "name": "amb-server"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "amb-server",
        "image": "sequenceiq/ambari:2.1.2-v1",
        "ports": [
          {
            "containerPort": 8080
          }
        ],
	"env": [
		{ "name": "BRIDGE_IP",
		  "value": "$(CONSUL_SERVICE_HOST)"
		}
	],
        "resources": {
          "limits": {
            "cpu": "100m"
          }
        }
      }
    ]
  }
}
